<%- include('partials/header') %>

    <style>
        .cyber-articles-hero {
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            padding: 80px 0 60px;
            position: relative;
            overflow: hidden;
        }

        .cyber-articles-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(239, 68, 68, 0.15) 0%, transparent 50%);
            animation: pulseGlow 8s ease-in-out infinite;
        }

        @keyframes pulseGlow {

            0%,
            100% {
                opacity: 0.5;
            }

            50% {
                opacity: 1;
            }
        }

        .cyber-particles {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .cyber-particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(99, 102, 241, 0.6);
            border-radius: 50%;
            animation: float 15s infinite;
        }

        .cyber-particle:nth-child(1) {
            left: 10%;
            animation-delay: 0s;
        }

        .cyber-particle:nth-child(2) {
            left: 20%;
            animation-delay: 2s;
            background: rgba(239, 68, 68, 0.6);
        }

        .cyber-particle:nth-child(3) {
            left: 30%;
            animation-delay: 4s;
        }

        .cyber-particle:nth-child(4) {
            left: 40%;
            animation-delay: 1s;
            background: rgba(16, 185, 129, 0.6);
        }

        .cyber-particle:nth-child(5) {
            left: 50%;
            animation-delay: 3s;
        }

        .cyber-particle:nth-child(6) {
            left: 60%;
            animation-delay: 5s;
            background: rgba(239, 68, 68, 0.6);
        }

        .cyber-particle:nth-child(7) {
            left: 70%;
            animation-delay: 2s;
        }

        .cyber-particle:nth-child(8) {
            left: 80%;
            animation-delay: 4s;
            background: rgba(16, 185, 129, 0.6);
        }

        .cyber-particle:nth-child(9) {
            left: 90%;
            animation-delay: 1s;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) scale(0);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100vh) scale(1);
                opacity: 0;
            }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .hero-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            font-size: 36px;
            color: white;
            box-shadow: 0 10px 40px rgba(99, 102, 241, 0.4);
            animation: iconFloat 3s ease-in-out infinite;
        }

        @keyframes iconFloat {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .hero-title {
            font-size: 48px;
            font-weight: 800;
            color: white;
            margin-bottom: 15px;
            background: linear-gradient(135deg, #ffffff, #a5b4fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 18px;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 30px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .search-container {
            max-width: 500px;
            margin: 0 auto 30px;
            position: relative;
        }

        .search-box {
            width: 100%;
            padding: 16px 50px 16px 20px;
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 50px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .search-box::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .search-box:focus {
            outline: none;
            border-color: #6366f1;
            background: rgba(255, 255, 255, 0.15);
        }

        .search-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.5);
            font-size: 18px;
        }

        .stats-row {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
        }

        .stat-item {
            text-align: center;
            padding: 15px 25px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-number {
            font-size: 28px;
            font-weight: 700;
            color: white;
            display: block;
        }

        .stat-label {
            font-size: 13px;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .articles-main {
            background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
            padding: 60px 0 80px;
            min-height: 60vh;
        }

        [data-theme="dark"] .articles-main {
            background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%) !important;
        }

        .featured-article {
            margin-bottom: 50px;
        }

        .featured-card {
            position: relative;
            border-radius: 24px;
            overflow: hidden;
            height: 400px;
            background: linear-gradient(135deg, #1a1a2e, #16213e);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .featured-image {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .featured-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.6;
        }

        .featured-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to right, rgba(15, 15, 26, 0.95) 0%, rgba(15, 15, 26, 0.7) 50%, transparent 100%);
        }

        .featured-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 40px;
            z-index: 2;
        }

        .featured-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
            animation: pulseBadge 2s ease-in-out infinite;
        }

        @keyframes pulseBadge {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .featured-title {
            font-size: 32px;
            font-weight: 700;
            color: white;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .featured-meta {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .featured-meta span {
            display: flex;
            align-items: center;
            gap: 6px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 14px;
        }

        .featured-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 14px 28px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .featured-btn:hover {
            transform: translateX(5px);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .section-title-text {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a2e;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .section-title-text i {
            color: #6366f1;
        }

        [data-theme="dark"] .section-title-text {
            color: #ffffff !important;
        }

        .filter-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .filter-btn {
            padding: 10px 20px;
            border: 2px solid #e2e8f0;
            background: white;
            border-radius: 50px;
            font-size: 14px;
            font-weight: 500;
            color: #64748b;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .filter-btn:hover,
        .filter-btn.active {
            border-color: #6366f1;
            background: #6366f1;
            color: white;
        }

        [data-theme="dark"] .filter-btn {
            background: #1a1a2e !important;
            border-color: #374151 !important;
            color: #d1d5db !important;
        }

        [data-theme="dark"] .filter-btn:hover,
        [data-theme="dark"] .filter-btn.active {
            border-color: #6366f1 !important;
            background: #6366f1 !important;
            color: white !important;
        }

        .cyber-articles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
            gap: 30px;
        }

        .cyber-article-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .cyber-article-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 60px rgba(99, 102, 241, 0.2);
        }

        [data-theme="dark"] .cyber-article-card {
            background: linear-gradient(145deg, #1a1a2e, #16213e) !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }

        .card-image-wrapper {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .card-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .cyber-article-card:hover .card-image-wrapper img {
            transform: scale(1.1);
        }

        .card-image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.6) 100%);
        }

        .category-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 2;
        }

        .category-badge.breach {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

        .category-badge.phishing {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }

        .category-badge.malware {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            color: white;
        }

        .category-badge.ransomware {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }

        .category-badge.scam {
            background: linear-gradient(135deg, #ec4899, #db2777);
            color: white;
        }

        .new-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 12px;
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border-radius: 50px;
            font-size: 10px;
            font-weight: 700;
            text-transform: uppercase;
            animation: newPulse 1.5s ease-in-out infinite;
            z-index: 2;
        }

        @keyframes newPulse {

            0%,
            100% {
                box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
            }

            50% {
                box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
            }
        }

        .reading-time {
            position: absolute;
            bottom: 15px;
            right: 15px;
            padding: 6px 12px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            border-radius: 50px;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
            backdrop-filter: blur(10px);
            z-index: 2;
        }

        .card-content {
            padding: 25px;
        }

        .card-title {
            font-size: 20px;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 12px;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        [data-theme="dark"] .card-title {
            color: #ffffff !important;
        }

        .card-description {
            color: #64748b;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 20px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        [data-theme="dark"] .card-description {
            color: #a1a1aa !important;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 1px solid #f1f5f9;
        }

        [data-theme="dark"] .card-footer {
            border-top-color: rgba(255, 255, 255, 0.1) !important;
        }

        .card-stats {
            display: flex;
            gap: 15px;
        }

        .stat {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #94a3b8;
            font-size: 13px;
        }

        .stat i {
            font-size: 14px;
        }

        .stat.likes i {
            color: #ef4444;
        }

        .stat.comments i {
            color: #6366f1;
        }

        [data-theme="dark"] .stat {
            color: #9ca3af !important;
        }

        .read-more-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .read-more-btn:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.4);
        }

        .date-badge {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #94a3b8;
            font-size: 12px;
            margin-bottom: 10px;
        }

        [data-theme="dark"] .date-badge {
            color: #9ca3af !important;
        }

        .empty-state-modern {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        }

        [data-theme="dark"] .empty-state-modern {
            background: #1a1a2e !important;
        }

        .empty-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            font-size: 40px;
            color: #94a3b8;
        }

        [data-theme="dark"] .empty-icon {
            background: linear-gradient(135deg, #374151, #4b5563) !important;
        }

        .empty-state-modern h3 {
            font-size: 24px;
            color: #1a1a2e;
            margin-bottom: 10px;
        }

        [data-theme="dark"] .empty-state-modern h3 {
            color: #ffffff !important;
        }

        .empty-state-modern p {
            color: #64748b;
            font-size: 16px;
        }

        [data-theme="dark"] .empty-state-modern p {
            color: #9ca3af !important;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 32px;
            }

            .featured-card {
                height: 350px;
            }

            .featured-title {
                font-size: 24px;
            }

            .cyber-articles-grid {
                grid-template-columns: 1fr;
            }

            .stats-row {
                gap: 15px;
            }

            .stat-item {
                padding: 12px 18px;
            }
        }
    </style>

    <section class="cyber-articles-hero">
        <div class="cyber-particles">
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
            <div class="cyber-particle"></div>
        </div>

        <div class="container">
            <div class="hero-content">
                <div class="hero-icon">
                    <i class="fas fa-skull-crossbones"></i>
                </div>
                <h1 class="hero-title">CyberCrime Articles</h1>
                <p class="hero-subtitle">Uncover the Dark Side of the Digital World â€” Stay Informed, Stay Protected</p>

                <div class="search-container">
                    <input type="text" class="search-box" id="articleSearch" placeholder="Search articles..."
                        onkeyup="filterArticles()">
                    <i class="fas fa-search search-icon"></i>
                </div>

                <div class="stats-row">
                    <div class="stat-item">
                        <span class="stat-number">
                            <%= articles ? articles.length : 0 %>
                        </span>
                        <span class="stat-label">Total Articles</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">
                            <%= articles && articles.length> 0 ? articles.reduce(function(sum, a) { return sum +
                                a.likes; }, 0) : 0 %>
                        </span>
                        <span class="stat-label">Total Likes</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">
                            <%= articles && articles.length> 0 ? articles.reduce(function(sum, a) { return sum +
                                a.comments.length; }, 0) : 0 %>
                        </span>
                        <span class="stat-label">Comments</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="articles-main">
        <div class="container">
            <% if (articles && articles.length> 0) { %>
                <% var featuredArticle=articles[0]; %>
                    <div class="featured-article">
                        <div class="featured-card">
                            <div class="featured-image">
                                <% if (featuredArticle.image) { %>
                                    <img src="<%= featuredArticle.image %>" alt="<%= featuredArticle.title %>">
                                    <% } else { %>
                                        <div
                                            style="width: 100%; height: 100%; background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                                        </div>
                                        <% } %>
                            </div>
                            <div class="featured-overlay"></div>
                            <div class="featured-content">
                                <span class="featured-badge">
                                    <i class="fas fa-fire"></i> Featured Article
                                </span>
                                <h2 class="featured-title">
                                    <%= featuredArticle.title %>
                                </h2>
                                <div class="featured-meta">
                                    <span><i class="fas fa-calendar"></i>
                                        <%= new Date(featuredArticle.createdAt).toLocaleDateString() %>
                                    </span>
                                    <span><i class="fas fa-clock"></i>
                                        <%= Math.max(3, Math.ceil(featuredArticle.description.length / 500)) %> min read
                                    </span>
                                    <span><i class="fas fa-heart"></i>
                                        <%= featuredArticle.likes %> likes
                                    </span>
                                    <span><i class="fas fa-comments"></i>
                                        <%= featuredArticle.comments.length %> comments
                                    </span>
                                </div>
                                <a href="/articles/<%= featuredArticle._id %>" class="featured-btn">
                                    Read Full Article <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="section-header">
                        <h2 class="section-title-text">
                            <i class="fas fa-newspaper"></i> All Articles
                        </h2>
                        <div class="filter-buttons">
                            <button class="filter-btn active" onclick="filterByCategory('all')">All</button>
                            <button class="filter-btn" onclick="filterByCategory('breach')">ðŸ”“ Breach</button>
                            <button class="filter-btn" onclick="filterByCategory('phishing')">ðŸŽ£ Phishing</button>
                            <button class="filter-btn" onclick="filterByCategory('malware')">ðŸ’€ Malware</button>
                            <button class="filter-btn" onclick="filterByCategory('ransomware')">ðŸ”’ Ransomware</button>
                        </div>
                    </div>

                    <div class="cyber-articles-grid" id="articlesGrid">
                        <% var categoryIcons={ breach: 'ðŸ”“' , phishing: 'ðŸŽ£' , malware: 'ðŸ’€' , ransomware: 'ðŸ”’' ,
                            scam: 'âš ï¸' }; %>
                            <% articles.forEach(function(article) { %>
                                <% var articleCategory=article.category || 'breach' ; %>
                                    <% var isNew=(Date.now() - new Date(article.createdAt).getTime()) < 7 * 24 * 60 * 60
                                        * 1000; %>
                                        <% var readingTime=Math.max(3, Math.ceil(article.description.length / 500)); %>

                                            <div class="cyber-article-card" data-category="<%= articleCategory %>"
                                                data-title="<%= article.title.toLowerCase() %>">
                                                <div class="card-image-wrapper">
                                                    <% if (article.image) { %>
                                                        <img src="<%= article.image %>" alt="<%= article.title %>">
                                                        <% } else { %>
                                                            <div
                                                                style="width: 100%; height: 100%; background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                                                            </div>
                                                            <% } %>
                                                                <div class="card-image-overlay"></div>

                                                                <span class="category-badge <%= articleCategory %>">
                                                                    <%= categoryIcons[articleCategory] || 'ðŸ”“' %>
                                                                        <%= articleCategory %>
                                                                </span>

                                                                <% if (isNew) { %>
                                                                    <span class="new-badge">âœ¨ New</span>
                                                                    <% } %>

                                                                        <span class="reading-time">
                                                                            <i class="fas fa-clock"></i>
                                                                            <%= readingTime %> min
                                                                        </span>
                                                </div>

                                                <div class="card-content">
                                                    <div class="date-badge">
                                                        <i class="fas fa-calendar-alt"></i>
                                                        <%= new Date(article.createdAt).toLocaleDateString() %>
                                                    </div>

                                                    <h3 class="card-title">
                                                        <%= article.title %>
                                                    </h3>

                                                    <p class="card-description">
                                                        <%= article.description.substring(0, 120) %>
                                                            <%= article.description.length> 120 ? '...' : '' %>
                                                    </p>

                                                    <div class="card-footer">
                                                        <div class="card-stats">
                                                            <span class="stat likes">
                                                                <i class="fas fa-heart"></i>
                                                                <%= article.likes %>
                                                            </span>
                                                            <span class="stat comments">
                                                                <i class="fas fa-comments"></i>
                                                                <%= article.comments.length %>
                                                            </span>
                                                        </div>

                                                        <a href="/articles/<%= article._id %>" class="read-more-btn">
                                                            Read <i class="fas fa-arrow-right"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }); %>
                    </div>
