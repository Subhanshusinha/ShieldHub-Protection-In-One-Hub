<%- include('partials/header') %>

    <style>
        .page-header {
            background: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #1e1b4b 100%);
            padding: 60px 0;
            text-align: center;
        }

        .page-header h1 {
            color: #fff;
            font-size: 42px;
            margin: 0;
        }

        .about-section {
            padding: 60px 0;
            background: var(--body-bg, #f8fafc);
        }

        .about-content {
            background: var(--card-bg, #fff);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            animation: fadeInUp 0.8s ease-out, float 6s ease-in-out infinite;
            position: relative;
            overflow: hidden;
            height: 100%;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .about-content:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(99, 102, 241, 0.25);
        }

        .about-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            align-items: start;
        }

        @media (max-width: 992px) {
            .about-grid {
                grid-template-columns: 1fr;
            }
        }

        .creator-card {
            animation-delay: 0.2s;
        }

        .about-content::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, transparent, #6366f1, #8b5cf6, transparent);
            animation: shimmer 3s infinite;
        }

        .about-content::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.05) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
            pointer-events: none;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes shimmer {
            to {
                left: 100%;
            }
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        @keyframes rotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .about-content h2 {
            color: var(--text-primary, #1a1a2e);
            font-size: 28px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6, #6366f1);
            background-size: 200% auto;
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientMove 3s linear infinite;
            position: relative;
        }

        @keyframes gradientMove {

            0%,
            100% {
                background-position: 0% center;
            }

            50% {
                background-position: 100% center;
            }
        }

        .about-content h3 {
            color: var(--text-primary, #1a1a2e);
            font-size: 22px;
            margin: 30px 0 20px;
            position: relative;
            display: inline-block;
        }

        .about-content h3::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6);
            transition: width 0.6s ease;
        }

        .about-content:hover h3::after {
            width: 100%;
        }

        .about-content p {
            color: var(--text-secondary, #666);
            font-size: 16px;
            line-height: 1.8;
        }

        .features-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .features-list li {
            padding: 15px 0;
            border-bottom: 1px solid var(--border-main, #e0e0e0);
            display: flex;
            align-items: center;
            gap: 15px;
            color: #444;
            font-size: 16px;
            transition: all 0.3s ease;
            animation: slideInLeft 0.6s ease-out backwards;
        }

        .features-list li:nth-child(1) {
            animation-delay: 0.1s;
        }

        .features-list li:nth-child(2) {
            animation-delay: 0.2s;
        }

        .features-list li:nth-child(3) {
            animation-delay: 0.3s;
        }

        .features-list li:nth-child(4) {
            animation-delay: 0.4s;
        }

        .features-list li:nth-child(5) {
            animation-delay: 0.5s;
        }

        .features-list li:hover {
            transform: translateX(10px);
            background: rgba(99, 102, 241, 0.05);
            padding-left: 10px;
            border-radius: 8px;
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .features-list li:last-child {
            border-bottom: none;
        }

        .features-list li i {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            flex-shrink: 0;
            transition: all 0.3s ease;
        }

        .features-list li:hover i {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
        }

        .features-list li strong {
            color: #1a1a2e;
            font-weight: 700;
        }

        /* Dark mode overrides */
        [data-theme="dark"] .about-section {
            background: #0f0f1a !important;
        }

        [data-theme="dark"] .about-content {
            background: #1a1a2e !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3) !important;
        }

        [data-theme="dark"] .about-content h2,
        [data-theme="dark"] .about-content h3 {
            color: #ffffff !important;
        }

        [data-theme="dark"] .about-content p {
            color: #d4d4d8 !important;
        }

        [data-theme="dark"] .features-list li {
            color: #e4e4e7 !important;
            border-color: #2d2d44 !important;
            background: transparent !important;
        }

        [data-theme="dark"] .features-list li strong {
            color: #ffffff !important;
        }

        [data-theme="dark"] .features-list li i {
            background: linear-gradient(135deg, #6366f1, #8b5cf6) !important;
            color: #ffffff !important;
        }

        /* Author Section */
        .author-section {
            margin-top: 20px;
        }

        .author-info {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 25px;
            padding: 20px;
            background: rgba(99, 102, 241, 0.05);
            border-radius: 12px;
            border-left: 3px solid #6366f1;
        }

        .author-info p {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 0;
            font-size: 17px;
        }

        .author-info i {
            font-size: 20px;
            color: #6366f1;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        [data-theme="dark"] .author-info i {
            color: #818cf8 !important;
        }

        .author-mission h4 {
            color: var(--text-primary, #1a1a2e);
            font-size: 20px;
            margin-bottom: 15px;
        }

        [data-theme="dark"] .author-mission h4 {
            color: #ffffff !important;
        }

        .author-quote {
            margin-top: 25px;
            padding: 20px 25px;
            background: rgba(99, 102, 241, 0.1);
            border-left: 3px solid #6366f1;
            border-radius: 8px;
            font-style: italic;
            color: #475569;
            position: relative;
            overflow: hidden;
        }

        .author-quote::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 3px;
            height: 0;
            background: linear-gradient(180deg, #6366f1, #8b5cf6, #6366f1);
            animation: borderGlow 2s ease-in-out infinite;
        }

        @keyframes borderGlow {

            0%,
            100% {
                height: 0;
                opacity: 0.5;
            }

            50% {
                height: 100%;
                opacity: 1;
            }
        }

        [data-theme="dark"] .author-quote {
            background: rgba(129, 140, 248, 0.15) !important;
            border-left-color: #818cf8 !important;
            color: #cbd5e1 !important;
        }

        .author-quote i {
            color: #6366f1;
            font-size: 14px;
        }

        [data-theme="dark"] .author-quote i {
            color: #818cf8 !important;
        }

        .author-quote .fa-quote-left {
            margin-right: 8px;
        }

        .author-quote .fa-quote-right {
            margin-left: 8px;
        }
    </style>

