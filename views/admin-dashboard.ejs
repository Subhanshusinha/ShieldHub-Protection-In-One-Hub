<%- include('partials/header') %>

    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .admin-title {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .admin-title h1 {
            font-size: 32px;
            color: #1a1a2e;
            margin: 0;
        }

        .admin-title i {
            font-size: 28px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .admin-welcome {
            color: #666;
            margin-top: 5px;
            font-size: 14px;
        }

        .logout-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .stat-card {
            background: #fff;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
        }

        .stat-card.articles::before {
            background: linear-gradient(90deg, #10b981, #059669);
        }

        .stat-card.quiz::before {
            background: linear-gradient(90deg, #f59e0b, #d97706);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .stat-card.articles .stat-icon {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(5, 150, 105, 0.15));
            color: #10b981;
        }

        .stat-card.quiz .stat-icon {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.15), rgba(217, 119, 6, 0.15));
            color: #f59e0b;
        }

        .stat-icon i {
            font-size: 28px;
        }

        .stat-number {
            font-size: 42px;
            font-weight: 800;
            color: #1a1a2e;
            margin-bottom: 5px;
        }

        .stat-label {
            color: #666;
            font-size: 16px;
        }

        .quick-actions {
            margin-bottom: 40px;
        }

        .quick-actions h2 {
            font-size: 24px;
            color: #1a1a2e;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .quick-actions h2 i {
            color: #6366f1;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
        }

        .action-card {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
        }

        .action-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .action-icon.articles {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .action-icon.quiz {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        .action-icon.settings {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
        }

        .action-icon i {
            font-size: 24px;
            color: #fff;
        }

        .action-content h3 {
            font-size: 18px;
            color: #1a1a2e;
            margin-bottom: 5px;
        }

        .action-content p {
            color: #666;
            font-size: 14px;
            margin: 0;
        }

        .action-arrow {
            margin-left: auto;
            color: #6366f1;
            font-size: 20px;
            transition: transform 0.3s ease;
        }

        .action-card:hover .action-arrow {
            transform: translateX(5px);
        }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <div class="admin-title">
                <div>
                    <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
                    <p class="admin-welcome">Welcome back, <strong>
                            <%= username %>
                        </strong>!</p>
                </div>
            </div>
            <a href="/admin/logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </div>

        <div class="stats-grid">
            <div class="stat-card articles">
                <div class="stat-icon">
                    <i class="fas fa-newspaper"></i>
                </div>
                <div class="stat-number">
                    <%= stats.articles %>
                </div>
                <div class="stat-label">Total Articles</div>
            </div>
            <div class="stat-card quiz">
                <div class="stat-icon">
                    <i class="fas fa-question-circle"></i>
                </div>
                <div class="stat-number">
                    <%= stats.quizQuestions %>
                </div>
                <div class="stat-label">Quiz Questions</div>
            </div>
        </div>

        <div class="quick-actions">
            <h2><i class="fas fa-bolt"></i> Quick Actions</h2>
            <div class="actions-grid">
                <a href="/admin/articles" class="action-card">
                    <div class="action-icon articles">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <div class="action-content">
                        <h3>Manage Articles</h3>
                        <p>Add, edit, or delete cybercrime articles</p>
                    </div>
                    <i class="fas fa-chevron-right action-arrow"></i>
                </a>
                <a href="/admin/quiz" class="action-card">
                    <div class="action-icon quiz">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <div class="action-content">
                        <h3>Manage Quiz</h3>
                        <p>Add or remove quiz questions</p>
                    </div>
                    <i class="fas fa-chevron-right action-arrow"></i>
                </a>
                <a href="/admin/settings" class="action-card">
                    <div class="action-icon settings">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="action-content">
                        <h3>Settings</h3>
                        <p>Change password and admin settings</p>
                    </div>
                    <i class="fas fa-chevron-right action-arrow"></i>
                </a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>