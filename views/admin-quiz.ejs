<%- include('partials/header') %>

    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .admin-title {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .admin-title h1 {
            font-size: 32px;
            color: var(--text-primary, #1a1a2e);
            margin: 0;
        }

        .admin-title i {
            font-size: 28px;
            color: #f59e0b;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
        }

        .stats-bar {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .stat-card {
            flex: 1;
            min-width: 150px;
            padding: 20px;
            background: var(--card-bg, #fff);
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
        }

        .stat-card i {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .stat-card.easy i {
            color: #10b981;
        }

        .stat-card.medium i {
            color: #f59e0b;
        }

        .stat-card.hard i {
            color: #ef4444;
        }

        .stat-card .stat-count {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-primary, #1a1a2e);
        }

        .stat-card .stat-label {
            font-size: 14px;
            color: var(--text-secondary, #64748b);
            margin-top: 5px;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
        }

        .alert-error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            color: #721c24;
        }

        .form-card {
            background: var(--card-bg, #fff);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            margin-bottom: 40px;
        }

        .form-card h2 {
            font-size: 22px;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .form-card h2 i {
            color: #f59e0b;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 10px;
            font-size: 14px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid var(--border-main, #e0e0e0);
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: var(--input-bg, #fff);
            color: var(--text-primary, #333);
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #f59e0b;
            box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.1);
        }

        /* Difficulty Selector */
        .difficulty-selector {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .difficulty-option {
            flex: 1;
            min-width: 120px;
            padding: 15px 20px;
            border: 2px solid var(--border-main, #e0e0e0);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            background: var(--input-bg, #fff);
        }

        .difficulty-option:hover {
            border-color: #f59e0b;
        }

        .difficulty-option input {
            display: none;
        }

        .difficulty-option.easy:has(input:checked) {
            border-color: #10b981;
            background: rgba(16, 185, 129, 0.1);
        }

        .difficulty-option.medium:has(input:checked) {
            border-color: #f59e0b;
            background: rgba(245, 158, 11, 0.1);
        }

        .difficulty-option.hard:has(input:checked) {
            border-color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

        .difficulty-option i {
            font-size: 24px;
            margin-bottom: 8px;
        }

        .difficulty-option.easy i {
            color: #10b981;
        }

        .difficulty-option.medium i {
            color: #f59e0b;
        }

        .difficulty-option.hard i {
            color: #ef4444;
        }

        .difficulty-option span {
            display: block;
            font-weight: 600;
            color: var(--text-primary, #1a1a2e);
        }

        .difficulty-option small {
            display: block;
            font-size: 11px;
            color: var(--text-secondary, #64748b);
            margin-top: 3px;
        }

        .options-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .option-input {
            position: relative;
        }

        .option-input .option-label {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 30px;
            height: 30px;
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 14px;
        }

        .option-input input {
            padding-left: 55px !important;
        }

        .correct-answer-select {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .correct-answer-option {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            border: 2px solid var(--border-main, #e0e0e0);
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .correct-answer-option:hover {
            border-color: #f59e0b;
        }

        .correct-answer-option input {
            width: auto;
            cursor: pointer;
        }

        .correct-answer-option input:checked+span {
            color: #f59e0b;
            font-weight: 600;
        }

        .correct-answer-option:has(input:checked) {
            border-color: #f59e0b;
            background: rgba(245, 158, 11, 0.05);
        }

        .submit-btn {
            padding: 15px 35px;
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
        }

        .questions-list {
            background: var(--card-bg, #fff);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        }

        .questions-list h2 {
            font-size: 22px;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .questions-list h2 i {
            color: #6366f1;
        }

        .question-item {
            padding: 25px;
            border: 1px solid var(--border-main, #e0e0e0);
            border-radius: 12px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .question-item:hover {
            border-color: #6366f1;
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.1);
        }

        .question-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 15px;
        }

        .question-text {
            font-size: 16px;
            color: var(--text-primary, #1a1a2e);
            font-weight: 600;
            flex: 1;
        }

        .question-meta {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .difficulty-badge {
            padding: 5px 12px;
            border-radius: 50px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .difficulty-badge.easy {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }

        .difficulty-badge.medium {
            background: rgba(245, 158, 11, 0.1);
            color: #f59e0b;
        }

        .difficulty-badge.hard {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
        }

        .question-options {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            margin-top: 15px;
        }

        .question-option {
            padding: 12px 15px;
            background: var(--input-bg, #f8f9fa);
            border-radius: 8px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--text-primary, #333);
        }

        .question-option.correct {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
        }

        .question-option .option-letter {
            width: 24px;
            height: 24px;
            background: #6366f1;
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: 700;
            flex-shrink: 0;
        }

        .question-option.correct .option-letter {
            background: #28a745;
        }

        .delete-btn {
            padding: 10px 18px;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            flex-shrink: 0;
        }

        .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
        }

        .empty-state {
            text-align: center;
            padding: 50px;
            color: var(--text-secondary, #666);
        }

        .empty-state i {
            font-size: 48px;
            color: #ddd;
            margin-bottom: 20px;
        }

        .quiz-forms-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            align-items: start;
        }

        @media (max-width: 900px) {
            .quiz-forms-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .options-grid {
                grid-template-columns: 1fr;
            }

            .question-options {
                grid-template-columns: 1fr;
            }

            .question-header {
                flex-direction: column;
            }

            .difficulty-selector {
                flex-direction: column;
            }
        }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <div class="admin-title">
                <h1><i class="fas fa-question-circle"></i> Manage Quiz Questions</h1>
            </div>
            <a href="/admin/dashboard" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <!-- Stats Bar -->
        <div class="stats-bar">
            <div class="stat-card easy">
                <i class="fas fa-smile"></i>
                <div class="stat-count">
                    <%= questions.filter(function(q) { return q.difficulty==='easy' || !q.difficulty; }).length %>
                </div>
                <div class="stat-label">Easy Questions</div>
            </div>
            <div class="stat-card medium">
                <i class="fas fa-meh"></i>
                <div class="stat-count">
                    <%= questions.filter(function(q) { return q.difficulty==='medium' ; }).length %>
                </div>
                <div class="stat-label">Medium Questions</div>
            </div>
            <div class="stat-card hard">
                <i class="fas fa-skull"></i>
                <div class="stat-count">
                    <%= questions.filter(function(q) { return q.difficulty==='hard' ; }).length %>
                </div>
                <div class="stat-label">Hard Questions</div>
            </div>
        </div>

        <% if (success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <%= success %>
            </div>
            <% } %>

                <% if (error) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                    <% } %>

                        <div class="quiz-forms-grid">
                            <div class="form-card">
                                <h2><i class="fas fa-plus-circle"></i> Add New Question</h2>
                                <form action="/admin/quiz/add" method="POST">
                                    <div class="form-group">
                                        <label for="question"><i class="fas fa-question"></i> Question</label>
                                        <input type="text" id="question" name="question"
                                            placeholder="Enter the quiz question" required>
                                    </div>

                                    <div class="form-group">
                                        <label><i class="fas fa-layer-group"></i> Difficulty Level</label>
                                        <div class="difficulty-selector">
                                            <label class="difficulty-option easy">
                                                <input type="radio" name="difficulty" value="easy" checked>
                                                <i class="fas fa-smile"></i>
                                                <span>Easy</span>
                                                <small>Basic questions</small>
                                            </label>
                                            <label class="difficulty-option medium">
                                                <input type="radio" name="difficulty" value="medium">
                                                <i class="fas fa-meh"></i>
                                                <span>Medium</span>
                                                <small>Intermediate level</small>
                                            </label>
                                            <label class="difficulty-option hard">
                                                <input type="radio" name="difficulty" value="hard">
                                                <i class="fas fa-skull"></i>
                                                <span>Hard</span>
                                                <small>Expert challenge</small>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><i class="fas fa-list"></i> Answer Options</label>
                                        <div class="options-grid">
                                            <div class="option-input">
                                                <span class="option-label">A</span>
                                                <input type="text" name="option1" placeholder="Option A" required>
                                            </div>
                                            <div class="option-input">
                                                <span class="option-label">B</span>
                                                <input type="text" name="option2" placeholder="Option B" required>
                                            </div>
                                            <div class="option-input">
                                                <span class="option-label">C</span>
                                                <input type="text" name="option3" placeholder="Option C" required>
                                            </div>
                                            <div class="option-input">
                                                <span class="option-label">D</span>
                                                <input type="text" name="option4" placeholder="Option D" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label><i class="fas fa-check-circle"></i> Correct Answer</label>
                                        <div class="correct-answer-select">
                                            <label class="correct-answer-option">
                                                <input type="radio" name="correctAnswer" value="0" required>
                                                <span>Option A</span>
                                            </label>
                                            <label class="correct-answer-option">
                                                <input type="radio" name="correctAnswer" value="1">
                                                <span>Option B</span>
                                            </label>
                                            <label class="correct-answer-option">
                                                <input type="radio" name="correctAnswer" value="2">
                                                <span>Option C</span>
                                            </label>
                                            <label class="correct-answer-option">
                                                <input type="radio" name="correctAnswer" value="3">
                                                <span>Option D</span>
                                            </label>
                                        </div>
                                    </div>

                                    <button type="submit" class="submit-btn">
                                        <i class="fas fa-plus"></i> Add Question
                                    </button>
                                </form>
                            </div>

                            <div class="form-card">
                                <h2><i class="fas fa-link"></i> Manage Resource Link</h2>
                                <form action="/admin/quiz/resource" method="POST">
                                    <div class="form-group">
                                        <label for="title"><i class="fas fa-heading"></i> Link Title</label>
                                        <input type="text" id="title" name="title" value="<%= resource.title %>"
                                            placeholder="e.g. Become a Cyber Hero" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="url"><i class="fas fa-link"></i> Resource URL</label>
                                        <input type="url" id="url" name="url" value="<%= resource.url %>"
                                            placeholder="https://example.com/guide.pdf" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="description"><i class="fas fa-align-left"></i> Description</label>
                                        <input type="text" id="description" name="description"
                                            value="<%= resource.description %>"
                                            placeholder="Short description for the user" required>
                                    </div>
                                    <button type="submit" class="submit-btn"
                                        style="background: linear-gradient(135deg, #6366f1, #4f46e5);">
                                        <i class="fas fa-save"></i> Update Link
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="questions-list">
                            <h2><i class="fas fa-list"></i> Existing Questions (<%= questions.length %>)</h2>

                            <% if (questions.length===0) { %>
                                <div class="empty-state">
                                    <i class="fas fa-question-circle"></i>
                                    <p>No quiz questions yet. Add your first question above!</p>
                                </div>
                                <% } else { %>
                                    <% questions.forEach(function(q, index) { %>
                                        <div class="question-item">
                                            <div class="question-header">
                                                <div class="question-text">
                                                    <strong>Q<%= index + 1 %>:</strong>
                                                    <%= q.question %>
                                                </div>
                                                <div class="question-meta">
                                                    <span class="difficulty-badge <%= q.difficulty || 'easy' %>">
                                                        <% if (q.difficulty==='hard' ) { %>
                                                            <i class="fas fa-skull"></i>
                                                            <% } else if (q.difficulty==='medium' ) { %>
                                                                <i class="fas fa-meh"></i>
                                                                <% } else { %>
                                                                    <i class="fas fa-smile"></i>
                                                                    <% } %>
                                                                        <%= q.difficulty || 'easy' %>
                                                    </span>
                                                    <form action="/admin/quiz/delete/<%= q._id %>" method="POST"
                                                        style="margin: 0;"
                                                        onsubmit="return confirm('Are you sure you want to delete this question?');">
                                                        <button type="submit" class="delete-btn">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="question-options">
                                                <% q.options.forEach(function(opt, i) { %>
                                                    <div
                                                        class="question-option <%= i === q.correctAnswer ? 'correct' : '' %>">
                                                        <span class="option-letter">
                                                            <%= String.fromCharCode(65 + i) %>
                                                        </span>
                                                        <%= opt %>
                                                            <% if (i===q.correctAnswer) { %>
                                                                <i class="fas fa-check"
                                                                    style="margin-left: auto; color: #28a745;"></i>
                                                                <% } %>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                        </div>
                                        <% }); %>
                                            <% } %>
                        </div>
    </div>

    <%- include('partials/footer') %>