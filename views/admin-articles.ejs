<%- include('partials/header') %>

    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            flex-wrap: wrap;
            gap: 20px;
        }

        .admin-title h1 {
            font-size: 32px;
            color: var(--text-primary, #1a1a2e);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .admin-title i {
            font-size: 28px;
            color: #10b981;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
        }

        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
        }

        .alert-error {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            color: #721c24;
        }

        .form-card,
        .articles-list {
            background: var(--card-bg, #fff);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            margin-bottom: 40px;
        }

        .form-card h2,
        .articles-list h2 {
            font-size: 22px;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .form-card h2 i {
            color: #10b981;
        }

        .articles-list h2 i {
            color: #6366f1;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group.full-width {
            grid-column: span 2;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 10px;
            font-size: 14px;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid var(--border-main, #e0e0e0);
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: var(--input-bg, #fff);
            color: var(--text-primary, #333);
        }

        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            outline: none;
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
        }

        .form-group textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-group small {
            color: var(--text-secondary, #666);
            font-size: 12px;
            margin-top: 5px;
            display: block;
        }

        /* Category Select Styling */
        .category-select-wrapper {
            position: relative;
        }

        .category-select {
            appearance: none;
            cursor: pointer;
            padding-right: 45px !important;
        }

        .category-select-wrapper::after {
            content: '\f078';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: #64748b;
        }

        .category-preview {
            display: flex;
            gap: 10px;
            margin-top: 10px;
            flex-wrap: wrap;
        }

        .category-tag {
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            color: white;
        }

        .category-tag.breach {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }

        .category-tag.phishing {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        .category-tag.malware {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        }

        .category-tag.ransomware {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .category-tag.scam {
            background: linear-gradient(135deg, #ec4899, #db2777);
        }

        .submit-btn {
            padding: 15px 35px;
            background: linear-gradient(135deg, #10b981, #059669);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }

        .article-item {
            display: flex;
            align-items: center;
            gap: 20px;
            padding: 20px;
            border: 1px solid var(--border-main, #e0e0e0);
            border-radius: 12px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .article-item:hover {
            border-color: #6366f1;
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.1);
        }

        .article-image {
            width: 100px;
            height: 80px;
            border-radius: 10px;
            object-fit: cover;
            flex-shrink: 0;
            background: var(--input-bg, #f0f0f0);
        }

        .article-info {
            flex: 1;
        }

        .article-info h3 {
            font-size: 18px;
            color: var(--text-primary, #1a1a2e);
            margin-bottom: 5px;
        }

        .article-info p {
            color: var(--text-secondary, #666);
            font-size: 14px;
            margin: 0;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .article-meta {
            display: flex;
            gap: 15px;
            align-items: center;
            margin-top: 10px;
            flex-wrap: wrap;
        }

        .article-date {
            color: var(--text-secondary, #999);
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .article-category {
            padding: 4px 12px;
            border-radius: 50px;
            font-size: 10px;
            font-weight: 600;
            text-transform: uppercase;
            color: white;
        }

        .article-category.breach {
            background: linear-gradient(135deg, #ef4444, #dc2626);
        }

        .article-category.phishing {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        .article-category.malware {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        }

        .article-category.ransomware {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .article-category.scam {
            background: linear-gradient(135deg, #ec4899, #db2777);
        }

        .article-stats {
            display: flex;
            gap: 12px;
            font-size: 12px;
            color: var(--text-secondary, #999);
        }

        .article-stats span {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .article-stats .likes i {
            color: #ef4444;
        }

        .article-stats .comments i {
            color: #6366f1;
        }

        .article-actions {
            display: flex;
            gap: 10px;
            flex-shrink: 0;
        }

        .edit-btn {
            padding: 10px 18px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .edit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
        }

        .delete-btn {
            padding: 10px 18px;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
        }

        .empty-state {
            text-align: center;
            padding: 50px;
            color: var(--text-secondary, #666);
        }

        .empty-state i {
            font-size: 48px;
            color: #ddd;
            margin-bottom: 20px;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(5px);
            z-index: 2000;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal-content {
            background: var(--card-bg, #fff);
            border-radius: 20px;
            padding: 35px;
            width: 100%;
            max-width: 700px;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .modal-header h2 {
            font-size: 22px;
            color: var(--text-primary, #1a1a2e);
            display: flex;
            align-items: center;
            gap: 12px;
            margin: 0;
        }

        .modal-header h2 i {
            color: #6366f1;
        }

        .modal-close {
            width: 40px;
            height: 40px;
            border: none;
            background: rgba(220, 53, 69, 0.1);
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #dc3545;
            font-size: 18px;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: #dc3545;
            color: #fff;
        }

        .modal-actions {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }

        .cancel-btn {
            padding: 15px 30px;
            background: #6c757d;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
        }

        .cancel-btn:hover {
            background: #5a6268;
        }

        @media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .form-group.full-width {
                grid-column: span 1;
            }

            .article-item {
                flex-direction: column;
                text-align: center;
            }

            .article-actions {
                justify-content: center;
            }
        }
    </style>

    <div class="admin-container">
        <div class="admin-header">
            <div class="admin-title">
                <h1><i class="fas fa-newspaper"></i> Manage CyberCrime Articles</h1>
            </div>
            <a href="/admin/dashboard" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <% if (success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <%= success %>
            </div>
            <% } %>

                <% if (error) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                    <% } %>

                        <div class="form-card">
                            <h2><i class="fas fa-plus-circle"></i> Add New Article</h2>
                            <form action="/admin/articles/add" method="POST" enctype="multipart/form-data">
                                <div class="form-grid">
                                    <div class="form-group">
                                        <label for="title"><i class="fas fa-heading"></i> Article Title</label>
                                        <input type="text" id="title" name="title" placeholder="Enter article title"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label for="category"><i class="fas fa-tag"></i> Category</label>
                                        <div class="category-select-wrapper">
                                            <select id="category" name="category" class="category-select" required
                                                onchange="updateCategoryPreview(this.value)">
                                                <option value="breach">üîì Data Breach</option>
                                                <option value="phishing">üé£ Phishing Attack</option>
                                                <option value="malware">üíÄ Malware</option>
                                                <option value="ransomware">üîí Ransomware</option>
                                                <option value="scam">‚ö†Ô∏è Scam / Fraud</option>
                                            </select>
                                        </div>
                                        <div class="category-preview" id="categoryPreview">
                                            <span class="category-tag breach">üîì breach</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="websiteUrl"><i class="fas fa-link"></i> Website URL</label>
                                        <input type="url" id="websiteUrl" name="websiteUrl"
                                            placeholder="https://example.com/article" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="image"><i class="fas fa-image"></i> Article Image (Upload)</label>
                                        <input type="file" id="image" name="image" accept="image/*">
                                    </div>
                                    <div class="form-group full-width">
                                        <label for="description"><i class="fas fa-align-left"></i> Description</label>
                                        <textarea id="description" name="description"
                                            placeholder="Enter article description (this will appear as a preview)"
                                            required></textarea>
                                    </div>
                                    <div class="form-group full-width">
                                        <label for="imageUrl"><i class="fas fa-external-link-alt"></i> OR Image URL
                                            (External Link)</label>
                                        <input type="url" id="imageUrl" name="imageUrl"
                                            placeholder="https://example.com/image.jpg">
                                        <small><i class="fas fa-info-circle"></i> If both file and URL are provided, the
                                            uploaded file will be used.</small>
                                    </div>
                                </div>
                                <button type="submit" class="submit-btn">
                                    <i class="fas fa-plus"></i> Add Article
                                </button>
                            </form>
                        </div>

                        <div class="articles-list">
                            <h2><i class="fas fa-list"></i> Existing Articles (<%= articles.length %>)</h2>

                            <% if (articles.length===0) { %>
                                <div class="empty-state">
                                    <i class="fas fa-newspaper"></i>
                                    <p>No articles yet. Add your first article above!</p>
                                </div>
                                <% } else { %>
                                    <% articles.forEach(function(article) { %>
                                        <div class="article-item" data-id="<%= article._id %>"
                                            data-title="<%= article.title %>" data-url="<%= article.websiteUrl %>"
                                            data-desc="<%= article.description %>"
                                            data-image="<%= article.image || '' %>"
                                            data-category="<%= article.category || 'breach' %>">
                                            <% if (article.image) { %>
                                                <img src="<%= article.image %>" alt="<%= article.title %>"
                                                    class="article-image">
                                                <% } else { %>
                                                    <div class="article-image"
                                                        style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                                                        <i class="fas fa-newspaper"
                                                            style="font-size: 24px; color: white;"></i>
                                                    </div>
                                                    <% } %>
                                                        <div class="article-info">
                                                            <h3>
                                                                <%= article.title %>
                                                            </h3>
                                                            <p>
                                                                <%= article.description %>
                                                            </p>
                                                            <div class="article-meta">
                                                                <span
                                                                    class="article-category <%= article.category || 'breach' %>">
                                                                    <% var catIcons={ breach: 'üîì' , phishing: 'üé£' ,
                                                                        malware: 'üíÄ' , ransomware: 'üîí' , scam: '‚ö†Ô∏è' };
                                                                        %>
                                                                        <%= catIcons[article.category] || 'üîì' %>
                                                                            <%= article.category || 'breach' %>
                                                                </span>
                                                                <span class="article-date">
                                                                    <i class="fas fa-calendar"></i>
                                                                    <%= new Date(article.createdAt).toLocaleDateString()
                                                                        %>
                                                                </span>
                                                                <div class="article-stats">
                                                                    <span class="likes"><i class="fas fa-heart"></i>
                                                                        <%= article.likes %>
                                                                    </span>
                                                                    <span class="comments"><i
                                                                            class="fas fa-comments"></i>
                                                                        <%= article.comments.length %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="article-actions">
                                                            <button type="button" class="edit-btn"
                                                                onclick="openEditModal(this)">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </button>
                                                            <form action="/admin/articles/delete/<%= article._id %>"
                                                                method="POST" style="margin: 0;"
                                                                onsubmit="return confirm('Are you sure you want to delete this article?');">
                                                                <button type="submit" class="delete-btn">
                                                                    <i class="fas fa-trash"></i> Delete
                                                                </button>
                                                            </form>
                                                        </div>
                                        </div>
                                        <% }); %>
                                            <% } %>
                        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal-overlay" id="editModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-edit"></i> Edit Article</h2>
                <button type="button" class="modal-close" onclick="closeEditModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="editForm" action="" method="POST" enctype="multipart/form-data">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="editTitle"><i class="fas fa-heading"></i> Article Title</label>
                        <input type="text" id="editTitle" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="editCategory"><i class="fas fa-tag"></i> Category</label>
                        <div class="category-select-wrapper">
                            <select id="editCategory" name="category" class="category-select" required>
                                <option value="breach">üîì Data Breach</option>
                                <option value="phishing">üé£ Phishing Attack</option>
                                <option value="malware">üíÄ Malware</option>
                                <option value="ransomware">üîí Ransomware</option>
                                <option value="scam">‚ö†Ô∏è Scam / Fraud</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editWebsiteUrl"><i class="fas fa-link"></i> Website URL</label>
                        <input type="url" id="editWebsiteUrl" name="websiteUrl" required>
                    </div>
                    <div class="form-group">
                        <label for="editImage"><i class="fas fa-image"></i> New Image (Upload)</label>
                        <input type="file" id="editImage" name="image" accept="image/*">
                        <small><i class="fas fa-info-circle"></i> Leave empty to keep current image.</small>
                    </div>
                    <div class="form-group full-width">
                        <label for="editDescription"><i class="fas fa-align-left"></i> Description</label>
                        <textarea id="editDescription" name="description" required></textarea>
                    </div>
                    <div class="form-group full-width">
                        <label for="editImageUrl"><i class="fas fa-external-link-alt"></i> OR New Image URL</label>
                        <input type="url" id="editImageUrl" name="imageUrl">
                        <small id="currentImageNote"></small>
                    </div>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <button type="button" class="cancel-btn" onclick="closeEditModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function updateCategoryPreview(category) {
            var icons = { breach: 'üîì', phishing: 'üé£', malware: 'üíÄ', ransomware: 'üîí', scam: '‚ö†Ô∏è' };
            var preview = document.getElementById('categoryPreview');
            preview.innerHTML = '<span class="category-tag ' + category + '">' + icons[category] + ' ' + category + '</span>';
        }

        function openEditModal(btn) {
            var item = btn.closest('.article-item');
            var id = item.getAttribute('data-id');
            var title = item.getAttribute('data-title');
            var url = item.getAttribute('data-url');
            var desc = item.getAttribute('data-desc');
            var image = item.getAttribute('data-image');
            var category = item.getAttribute('data-category') || 'breach';

            document.getElementById('editForm').action = '/admin/articles/edit/' + id;
            document.getElementById('editTitle').value = title;
            document.getElementById('editWebsiteUrl').value = url;
            document.getElementById('editDescription').value = desc;
            document.getElementById('editCategory').value = category;
            document.getElementById('editImageUrl').value = '';

            var note = document.getElementById('currentImageNote');
            note.innerHTML = image ? '<i class="fas fa-image"></i> Current image set' : '<i class="fas fa-info-circle"></i> No current image';

            document.getElementById('editModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('active');
            document.body.style.overflow = '';
        }

        document.getElementById('editModal').addEventListener('click', function (e) {
            if (e.target === this) closeEditModal();
        });

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') closeEditModal();
        });
    </script>

    <%- include('partials/footer') %>