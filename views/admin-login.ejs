<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - ShieldHub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        // Apply saved theme before page renders to prevent flash
        (function () {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
            }
        })();
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --login-card-bg: rgba(255, 255, 255, 0.95);
            --login-text: #1a1a2e;
            --login-text-secondary: #666;
            --login-input-bg: #f8f9fa;
            --login-border: #e0e0e0;
        }

        [data-theme="dark"] {
            --login-card-bg: rgba(26, 26, 46, 0.95);
            --login-text: #e4e4e7;
            --login-text-secondary: #a1a1aa;
            --login-input-bg: #252538;
            --login-border: #3d3d56;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                radial-gradient(2px 2px at 20px 30px, rgba(255, 255, 255, 0.3), transparent),
                radial-gradient(2px 2px at 40px 70px, rgba(139, 92, 246, 0.4), transparent),
                radial-gradient(2px 2px at 50px 160px, rgba(99, 102, 241, 0.3), transparent),
                radial-gradient(2px 2px at 90px 40px, rgba(255, 215, 0, 0.3), transparent);
            background-size: 200px 200px;
            animation: particleFloat 20s linear infinite;
            opacity: 0.7;
        }

        @keyframes particleFloat {
            0% {
                transform: translateY(0) translateX(0);
            }

            50% {
                transform: translateY(-50px) translateX(25px);
            }

            100% {
                transform: translateY(0) translateX(0);
            }
        }

        .login-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .login-card {
            background: var(--login-card-bg);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.8);
            animation: slideIn 0.6s ease;
            position: relative;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6, #ffd700);
            border-radius: 24px 24px 0 0;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .login-icon i {
            font-size: 32px;
            color: #fff;
        }

        .login-header h1 {
            font-size: 26px;
            color: var(--login-text);
            margin-bottom: 8px;
        }

        .login-header p {
            color: var(--login-text-secondary);
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--login-text);
            margin-bottom: 8px;
            font-size: 14px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper>i {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #6366f1;
            font-size: 16px;
            z-index: 2;
        }

        .form-group input {
            width: 100%;
            padding: 14px 16px 14px 45px;
            border: 2px solid var(--login-border);
            border-radius: 12px;
            font-size: 15px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s ease;
            background: var(--login-input-bg);
            color: var(--login-text);
        }

        .form-group input:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .password-field input {
            padding-right: 50px;
        }

        .toggle-password {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: var(--login-text-secondary);
            font-size: 16px;
            padding: 5px;
            transition: color 0.3s ease;
            z-index: 2;
        }

        .toggle-password:hover {
            color: #6366f1;
        }

        .captcha-group {
            margin-bottom: 20px;
        }

        .captcha-group label {
            display: block;
            font-weight: 600;
            color: var(--login-text);
            margin-bottom: 8px;
            font-size: 14px;
        }

        .captcha-wrapper {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .captcha-question {
            display: flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            padding: 12px 16px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            min-width: 120px;
            justify-content: center;
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.3);
        }

        .captcha-question i {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
        }

        .captcha-input {
            flex: 1;
        }

        .captcha-input input {
            width: 100%;
            padding: 14px 16px !important;
            border: 2px solid var(--login-border);
            border-radius: 12px;
            font-size: 15px;
            text-align: center;
            font-weight: 600;
            transition: all 0.3s ease;
            background: var(--login-input-bg);
            color: var(--login-text);
        }

        .captcha-input input:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .captcha-refresh {
            background: linear-gradient(135deg, #10b981, #059669);
            color: #fff;
            border: none;
            width: 48px;
            height: 48px;
            border-radius: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
        }

        .captcha-refresh:hover {
            transform: rotate(180deg);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }

        .captcha-refresh i {
            font-size: 16px;
        }

        .login-btn {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: #fff;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            font-family: 'Inter', sans-serif;
            cursor: pointer;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
        }

        .login-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(99, 102, 241, 0.4);
        }

        .login-btn i {
            transition: transform 0.3s ease;
        }

        .login-btn:hover i {
            transform: translateX(5px);
        }

        .error-message {
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            color: #721c24;
            padding: 14px 18px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
            animation: shake 0.5s ease;
        }

        @keyframes shake {

            0%,
            100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-5px);
            }

            75% {
                transform: translateX(5px);
            }
        }

        .forgot-password {
            text-align: center;
            margin-top: 18px;
            margin-bottom: 12px;
        }

        .forgot-password a {
            color: #6366f1;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .forgot-password a:hover {
            color: #8b5cf6;
            text-decoration: underline;
        }

        .forgot-password a i {
            margin-right: 6px;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 12px;
            color: var(--login-text-secondary);
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #6366f1;
        }

        .back-link i {
            margin-right: 8px;
        }

        /* Dark Mode Toggle */
        .dark-mode-toggle-login {
            position: fixed;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 100;
        }

        .dark-mode-toggle-login:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: #6366f1;
            transform: rotate(20deg) scale(1.1);
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
        }

        .dark-mode-toggle-login i {
            font-size: 20px;
            color: #ffd700;
            transition: all 0.4s ease;
        }

        .dark-mode-toggle-login .fa-sun {
            display: block;
        }

        .dark-mode-toggle-login .fa-moon {
            display: none;
        }

        [data-theme="dark"] .dark-mode-toggle-login .fa-sun {
            display: none;
        }

        [data-theme="dark"] .dark-mode-toggle-login .fa-moon {
            display: block;
            color: #a5b4fc;
        }
    </style>
</head>

<body>
    <!-- Dark Mode Toggle -->
    <button class="dark-mode-toggle-login" id="darkModeToggle" title="Toggle Dark Mode">
        <i class="fas fa-sun"></i>
        <i class="fas fa-moon"></i>
    </button>

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h1>Admin Login</h1>
                <p>Enter your credentials to access the dashboard</p>
            </div>

            <% if (error) { %>
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
                <% } %>

                    <form action="/admin/login" method="POST" id="loginForm">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <div class="input-wrapper">
                                <i class="fas fa-user"></i>
                                <input type="text" id="username" name="username" placeholder="Enter username" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="input-wrapper password-field">
                                <i class="fas fa-lock"></i>
                                <input type="password" id="password" name="password" placeholder="Enter password"
                                    required>
                                <button type="button" class="toggle-password"
                                    onclick="togglePassword('password', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="captcha-group">
                            <label for="captchaAnswer">Security Check</label>
                            <div class="captcha-wrapper">
                                <div class="captcha-question">
                                    <i class="fas fa-calculator"></i>
                                    <span id="captchaText">
                                        <%= captchaNum1 %> + <%= captchaNum2 %> = ?
                                    </span>
                                </div>
                                <div class="captcha-input">
                                    <input type="number" id="captchaAnswer" name="captchaAnswer" placeholder="?"
                                        required>
                                </div>
                                <button type="button" class="captcha-refresh" onclick="refreshCaptcha()"
                                    title="Refresh CAPTCHA">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                            <input type="hidden" id="captchaNum1" name="captchaNum1" value="<%= captchaNum1 %>">
                            <input type="hidden" id="captchaNum2" name="captchaNum2" value="<%= captchaNum2 %>">
                        </div>

                        <button type="submit" class="login-btn">
                            <span>Sign In</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </form>

                    <div class="forgot-password">
                        <a href="/admin/forgot-password">
                            <i class="fas fa-key"></i>
                            Forgot Password?
                        </a>
                    </div>

                    <a href="/" class="back-link">
                        <i class="fas fa-arrow-left"></i>
                        Back to Home
                    </a>
        </div>
    </div>

    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function refreshCaptcha() {
            const num1 = Math.floor(Math.random() * 10) + 1;
            const num2 = Math.floor(Math.random() * 10) + 1;

            document.getElementById('captchaText').textContent = num1 + ' + ' + num2 + ' = ?';
            document.getElementById('captchaNum1').value = num1;
            document.getElementById('captchaNum2').value = num2;
            document.getElementById('captchaAnswer').value = '';
            document.getElementById('captchaAnswer').focus();
        }

        // Dark Mode Toggle
        const darkModeToggle = document.getElementById('darkModeToggle');

        function setTheme(theme) {
            if (theme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            } else {
                document.documentElement.removeAttribute('data-theme');
                localStorage.setItem('theme', 'light');
            }
        }

        darkModeToggle.addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            if (currentTheme === 'dark') {
                setTheme('light');
            } else {
                setTheme('dark');
            }
        });

        // Refresh captcha if there's an error
        <% if (error) { %>
            refreshCaptcha();
        <% } %>
    </script>
</body>

</html>